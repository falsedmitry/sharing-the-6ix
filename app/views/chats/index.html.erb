<div class="container">

  <h1>Messages</h1>
  <% @chats.each do |chat| %>
    <% if chat.tool.owner == current_user || chat.user == current_user %>
      <div class=â€œchatsâ€>
        <% if chat.tool.owner_pictures[0] %>
          <%= image_tag("#{chat.tool.owner_pictures[0]}", size: "120x100", alt: "No Image") %>
        <% end %>
        <p>
          <%= link_to(chat.tool.name, edit_chat_path(chat)) %>
          <% if chat.tool.owner == current_user %>
            <% if chat.unread_owner_message_count > 0 %>
              (<%= chat.unread_owner_message_count %>)
            <% end %>
          <% else %>
            <% if chat.unread_borrower_message_count > 0 %>
              (<%= chat.unread_borrower_message_count %>)
            <% end %>
          <% end %>
        </p>
        <p>From: <%= chat.user.name %></p>
        <hr>
      </div>
    <% end %>
  <% end %>

</div>
