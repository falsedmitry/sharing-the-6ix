<h1>Messages</h1>
<% @chats.each do |chat| %>
  <% if chat.tool.owner == current_user || chat.user == current_user %>
    <div class=â€œchatsâ€>
      <% if chat.tool.owner_pictures[0] %>
        <%= image_tag("#{chat.tool.owner_pictures[0]}", size: "120x100", alt: "No Image") %>
      <% end %>
      <p>
        <%= link_to(chat.tool.name, edit_chat_path(chat)) %>
        <% if chat.tool.owner == current_user %>
          <% if chat.user.chats.where("tool_id = ?", chat.tool.id).where("unread = ?", true).where("owner_reply = ?", false).count > 0 %>
            (<%= chat.user.chats.where("tool_id = ?", chat.tool.id).where("unread = ?", true).where("owner_reply = ?", false).count %>)
          <% end %>
        <% else %>
          <% if chat.user.chats.where("tool_id = ?", chat.tool.id).where("unread = ?", true).where("owner_reply = ?", true).count > 0 %>
            (<%= chat.user.chats.where("tool_id = ?", chat.tool.id).where("unread = ?", true).where("owner_reply = ?", true).count %>)
          <% end %>
        <% end %>
      </p>
      <p>From: <%= chat.user.name %></p>
      <hr>
    </div>
  <% end %>
<% end %>
